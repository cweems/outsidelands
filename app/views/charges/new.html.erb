<%= form_tag charges_path, :id => 'payment-form' do %>
  <div>
    <p class="text-center text-secondary">
      Dontation Amount:
    </p>
    <div class="text-center">
      <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label value="500" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option1" autocomplete="off"> $5
        </label>
        <label value="1000" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option2" autocomplete="off"> $10
        </label>
        <label value="2000" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option3" autocomplete="off"> $20
        </label>
        <label value="5000" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option3" autocomplete="off"> $50
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <label class="text-secondary">Phone number</label>
        <input id="phone-input" class="form-control form-control-lg" style="text-align: center" type="text" value="<%=@phone_number%>">
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <label class="text-secondary">First Name</label>
        <input id="first-name" class="form-control form-control-lg" type="text" value="">
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <label class="text-secondary">Last Name</label>
        <input id="last-name" class="form-control form-control-lg" type="text" value="">
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-12">
        <label class="text-secondary">Payment</label>
        <div id="card-element" class="form-control form-control-lg">
        <!-- A Stripe Element will be inserted here. -->
        </div>
      <div>
    </div>

    <div class="row">
      <div class="col-12">
        <div id="card-errors" role="alert"></div>
      <div>
    </div>

    <div class="row">
      <div class="col">
        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit Payment</button>
      <div>
    </div>

    <input id="price-input" type="hidden" value="">

<% end %>


<%= javascript_include_tag 'application' %>
