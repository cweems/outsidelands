<%= form_tag charges_path, :id => 'payment-form' do %>
  <div>
    <p class="text-center text-secondary">
      Dontation Amount:
    </p>
    <div class="text-center">
      <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label value="10" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option2" autocomplete="off"> $10
        </label>
        <label value="25" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option3" autocomplete="off"> $25
        </label>
        <label value="50" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option3" autocomplete="off"> $50
        </label>
        <label value="custom" class="btn btn-lg btn-primary price-button">
          <input type="radio" name="options" id="option3" autocomplete="off"> Other
        </label>
      </div>
    </div>
    <div id="chosen-donation-amount" class="row" style="display: none">
      <div class="col-12 mt-3">
        <label class="text-secondary">Custom donation amount</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">$</span>
          </div>
          <input id="amount-input" name="amountInput" pattern="[0-9]" class="form-control form-control-lg" type="number" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
          <div class="input-group-append">
            <span class="input-group-text">.00</span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <label class="text-secondary">First Name</label>
        <input id="first-name" name="firstName" class="form-control form-control-lg" type="text" value="">
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <label class="text-secondary">Last Name</label>
        <input id="last-name" name="lastName" class="form-control form-control-lg" type="text" value="">
      </div>
    </div>

    <input id="price-input" name="price_input" type="hidden" value="">
    <input id="phone-number-input" name="phone_number" type="hidden" value="<%=@phone_number%>">
    <input id="first-name-input" name="first_name" type="hidden" value="">
    <input id="last-name-input" name="last_name" type="hidden" value="">

    <input id="stripe-token" name="stripeToken" type="hidden" value="">



<% end %>

